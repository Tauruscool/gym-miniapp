.wrap{ padding:24rpx; }

.title{ font-size:34rpx; font-weight:600; margin:8rpx 0 18rpx; }

.card{ background:#fff; padding:24rpx; border-radius:16rpx; box-shadow:0 2rpx 12rpx rgba(0,0,0,.04); margin-bottom:20rpx; }

.sub{ font-size:28rpx; font-weight:600; margin-bottom:16rpx; }

.row{ display:flex; gap:16rpx; align-items:center; flex-wrap:wrap; }

.ipt{ flex:1; min-width:200rpx; border:1rpx solid #e5e5e5; border-radius:12rpx; padding:16rpx; }

.ta{ width:100%; min-height:120rpx; border:1rpx solid #e5e5e5; border-radius:12rpx; padding:16rpx; margin-top:12rpx; }

.picker{ border:1rpx solid #e5e5e5; border-radius:12rpx; padding:16rpx 20rpx; min-width:120rpx; }

.btn{ background:#07c160; color:#fff; border-radius:12rpx; padding:16rpx 24rpx; border:none; }

.btn.ghost{ background:#f2f2f2; color:#333; }

.btn.submit{ width:100%; margin-top:12rpx; }

/* 学员选择 */
.line{ display:flex; align-items:center; justify-content:space-between; padding:16rpx 0; border-bottom:1rpx solid #f0f0f0; }

.line:last-child{ border-bottom:none; }

.uinfo{ flex:1; font-size:28rpx; }

.chosen{ margin-top:16rpx; padding:12rpx; background:#f5f5f5; border-radius:8rpx; font-size:26rpx; color:#666; }

/* 课程选择 */
.sinfo{ flex:1; display:flex; flex-direction:column; gap:8rpx; }

.sinfo .name{ font-size:28rpx; font-weight:600; }

.sinfo .time{ font-size:24rpx; color:#666; }

.badge{ display:inline-block; padding:4rpx 12rpx; border-radius:8rpx; font-size:22rpx; }

.badge.pending{ background:#fff3cd; color:#856404; }

.badge.confirmed{ background:#d1ecf1; color:#0c5460; }

.badge.completed{ background:#d4edda; color:#155724; }

.badge.cancelled{ background:#f8d7da; color:#721c24; }

.swlabel{ font-size:26rpx; margin-left:8rpx; }

/* RPE选择 */
.rpe{ margin-top:16rpx; }

.rpe .label{ font-size:26rpx; margin-bottom:12rpx; color:#666; }

.rpe-row{ display:flex; gap:12rpx; flex-wrap:wrap; }

.chip{ padding:12rpx 20rpx; border:1rpx solid #e5e5e5; border-radius:20rpx; background:#fff; font-size:26rpx; text-align:center; min-width:60rpx; }

.chip.on{ background:#07c160; color:#fff; border-color:#07c160; }

/* 动作搜索 */
.i-left{ flex:1; }

.i-left .name{ font-weight:600; font-size:28rpx; }

.i-left .subtle{ color:#666; font-size:24rpx; margin-top:4rpx; }

.tips{ color:#888; font-size:24rpx; margin-top:8rpx; text-align:center; }

/* 已选动作 */
.sel{ border:1rpx solid #eee; border-radius:12rpx; padding:16rpx; margin-bottom:12rpx; }

.s-top{ display:flex; align-items:center; justify-content:space-between; margin-bottom:12rpx; }

.s-top .name{ font-weight:600; font-size:28rpx; }

.grid{ display:grid; grid-template-columns:1fr 1fr; gap:12rpx; }

.g-item{ display:flex; flex-direction:column; gap:8rpx; }

.g-item text{ font-size:24rpx; color:#666; }

.g-item .num{ width:100%; border:1rpx solid #e5e5e5; border-radius:12rpx; padding:10rpx; text-align:center; }

.g-item2{ grid-column:1 / -1; display:flex; flex-direction:column; gap:8rpx; }

.g-item2 text{ font-size:24rpx; color:#666; }

.g-item2 .ipt{ width:100%; }
