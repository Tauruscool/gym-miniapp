.wrap{ padding:24rpx; }

.title{ font-size:34rpx; font-weight:600; margin:10rpx 0 18rpx; }

.card{ background:#fff; padding:22rpx; border-radius:16rpx; box-shadow:0 2rpx 12rpx rgba(0,0,0,.04); margin-bottom:18rpx; }

.sub{ font-weight:600; margin-bottom:12rpx; }

.row{ display:flex; gap:12rpx; align-items:center; }

.picker,.ipt{ border:1rpx solid #e5e5e5; border-radius:12rpx; padding:14rpx; }

.ta{ width:100%; min-height:120rpx; border:1rpx solid #e5e5e5; border-radius:12rpx; padding:14rpx; margin-top:10rpx; }

.btn{ background:#07c160; color:#fff; border-radius:12rpx; padding:14rpx 22rpx; }

.btn.ghost{ background:#f2f2f2; color:#333; }

.line{ display:flex; align-items:center; justify-content:space-between; padding:14rpx 0; border-bottom:1rpx solid #f5f5f5; }

.uinfo,.sinfo .time{ color:#666; font-size:24rpx; }

.sinfo .name{ font-weight:600; display:block; }

.badge{ margin-left:8rpx; padding:2rpx 8rpx; border-radius:10rpx; font-size:22rpx; }

.badge.pending{ background:#fff6e5; color:#f59e0b; }

.badge.confirmed{ background:#e8f7ef; color:#10b981; }

.badge.done{ background:#eef2ff; color:#6366f1; }

.tips{ color:#888; font-size:24rpx; margin-top:8rpx; }

.chosen{ margin-top:10rpx; color:#333; }



.rpe{ margin-top:10rpx; }

.rpe .label{ margin-bottom:8rpx; }

.rpe-row{ display:flex; gap:10rpx; flex-wrap:wrap; }

.chip{ padding:10rpx 16rpx; border:1rpx solid #e5e5e5; border-radius:12rpx; }

.chip.on{ background:#07c160; color:#fff; border-color:#07c160; }



.i-left .name{ font-weight:600; }

.i-left .subtle{ color:#666; font-size:24rpx; }

.sel{ border:1rpx solid #eee; border-radius:12rpx; padding:14rpx; margin-top:10rpx; }

.s-top{ display:flex; align-items:center; justify-content:space-between; }

.grid{ display:grid; grid-template-columns:1fr 1fr; gap:10rpx; margin-top:10rpx; }

.g-item,.g-item2{ display:flex; align-items:center; gap:10rpx; }

.num{ width:160rpx; border:1rpx solid #e5e5e5; border-radius:12rpx; padding:10rpx; text-align:center; }

.submit{ width:100%; }

.swlabel{ color:#666; }
